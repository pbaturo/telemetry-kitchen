@model Web.Mvc.Repositories.SensorDetail

@{
    ViewData["Title"] = Model.DisplayName;
}

<div class="mb-3">
    <a href="@Url.Action("Index", "Sensors")" class="btn btn-outline-secondary">
        ‚Üê Back to Sensors
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <h1 class="page-title">üì° @Model.DisplayName</h1>
    </div>
    <div class="col-lg-4">
        <div class="card bg-light">
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <small class="text-muted">Total Events</small>
                        <h4>@Model.TotalEventCount.ToString("N0")</h4>
                    </div>
                    <div class="col-6">
                        <small class="text-muted">Created</small>
                        <h6>@Model.CreatedAt.ToString("d")</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">üìä Latest Measurements</h5>
                @if (Model.LatestMeasurementTime.HasValue)
                {
                    <small class="text-muted">Last updated: @Model.LatestMeasurementTime.Value.ToString("g")</small>
                }
            </div>
            <div class="card-body">
                @if (Model.LatestMeasurements.Any())
                {
                    <div class="row g-3">
                        @foreach (var measurement in Model.LatestMeasurements)
                        {
                            var (emoji, description, unit_description) = measurement.Name.ToLower() switch
                            {
                                // Standard English patterns
                                var n when n.Contains("temp") && n.Contains("internal") => ("üå°Ô∏è", "Internal Temperature", "Celsius (¬∞C) - Temperature inside the sensor device"),
                                var n when n.Contains("temp") => ("üå°Ô∏è", "Ambient Temperature", "Celsius (¬∞C) - Air temperature in the environment"),
                                var n when n.Contains("humidity") || n.Contains("luftfeuchte") => ("üíß", "Relative Humidity", "Percentage (%) - Amount of water vapor in air (0-100%)"),
                                var n when n.Contains("pressure") && n.Contains("absolute") => ("üîΩ", "Absolute Pressure", "Hectopascals (hPa) - Atmospheric pressure at sensor elevation"),
                                var n when n.Contains("pressure") || n.Contains("luftdruck") => ("üîΩ", "Atmospheric Pressure", "Hectopascals (hPa) - Air pressure at sea level equivalent"),
                                var n when n.Contains("pm2.5") || n.Contains("pm25") || n.Contains("feinstaub pm2") => ("ü´Å", "Particulate Matter 2.5Œºm", "Micrograms/m¬≥ (¬µg/m¬≥) - Fine dust particles ‚â§2.5 micrometers"),
                                var n when n.Contains("pm10") => ("üí®", "Particulate Matter 10Œºm", "Micrograms/m¬≥ (¬µg/m¬≥) - Coarse dust particles ‚â§10 micrometers"),
                                var n when n.Contains("pm1") => ("üå´Ô∏è", "Particulate Matter 1Œºm", "Micrograms/m¬≥ (¬µg/m¬≥) - Ultra-fine dust particles ‚â§1 micrometer"),
                                var n when n.Contains("co2") => ("üè≠", "Carbon Dioxide", "Parts per Million (ppm) - CO‚ÇÇ concentration in air (400-1000 typical)"),
                                var n when n.Contains("voc") => ("üß™", "Volatile Organic Compounds", "Index Value - Air quality indicator (higher = worse)"),
                                var n when n.Contains("wind") && (n.Contains("speed") || n.Contains("geschwindigkeit")) => ("üí®", "Wind Speed", "Meters/second (m/s) or Kilometers/hour (km/h) - Horizontal air movement velocity"),
                                var n when n.Contains("wind") && (n.Contains("direction") || n.Contains("richtung")) => ("üß≠", "Wind Direction", "Degrees (¬∞) - Direction FROM which wind blows (0¬∞=N, 90¬∞=E, 180¬∞=S, 270¬∞=W)"),
                                var n when n.Contains("rain") || n.Contains("precipitation") || n.Contains("regen") => ("üåßÔ∏è", "Precipitation", "Millimeters (mm) - Rainfall accumulated over measurement period"),
                                var n when n.Contains("solar") || n.Contains("radiation") => ("‚òÄÔ∏è", "Solar Radiation", "Watts/m¬≤ (W/m¬≤) - Direct solar energy received"),
                                var n when n.Contains("uv") => ("‚òÄÔ∏è", "UV Index", "Index Value (0-11+) - Ultraviolet radiation intensity"),
                                var n when n.Contains("light") || n.Contains("lux") || n.Contains("beleuchtung") => ("üí°", "Light Intensity", "Lux (lx) - Visible light illuminance or brightness"),
                                var n when n.Contains("battery") => ("üîã", "Battery Level", "Percentage (%) - Power remaining in sensor battery"),
                                var n when n.Contains("power") || n.Contains("leistung") => ("‚ö°", "Power Output", "Watts (W) or Watt-hours (Wh) - Electrical power generation or consumption"),
                                var n when n.Contains("groundwater") || n.Contains("grundwasser") => ("üåä", "Groundwater Level", "Centimeters (cm) or Meters (m) - Height of water table below surface"),
                                var n when n.Contains("water") && n.Contains("level") => ("üåä", "Water Level", "Centimeters (cm) or Meters (m) - Height of water surface"),
                                var n when n.Contains("noise") || n.Contains("sound") => ("üîä", "Sound Level", "Decibels (dB) - Acoustic noise intensity"),
                                var n when n.Contains("altitude") || n.Contains("elevation") => ("‚õ∞Ô∏è", "Altitude/Elevation", "Meters (m) - Height above mean sea level"),
                                // German/Special measurement types
                                var n when n.Contains("d√§mmerung") => ("üåÖ", "Twilight Light Level", "Lux (lx) - Ambient light during twilight/dusk period"),
                                var n when n.Contains("licht sonne") && n.Contains("ost") => ("‚òÄÔ∏è", "Solar Light - East", "Kilolux (kLx) - Solar irradiance from eastern direction"),
                                var n when n.Contains("licht sonne") && n.Contains("s√ºd") => ("‚òÄÔ∏è", "Solar Light - South", "Kilolux (kLx) - Solar irradiance from southern direction"),
                                var n when n.Contains("licht sonne") && n.Contains("west") => ("‚òÄÔ∏è", "Solar Light - West", "Kilolux (kLx) - Solar irradiance from western direction"),
                                var n when n.Contains("tagesleistung") => ("üìä", "Daily Energy Production", "Watt-hours (Wh) - Total electrical energy generated per day"),
                                var n when n.Contains("leistungaktuell") => ("‚ö°", "Current Power Output", "Watts (W) - Real-time electrical power being generated"),
                                _ => ("üìè", measurement.Name, measurement.Unit ?? "Unknown unit")
                            };

                            <div class="col-md-4 col-sm-6">
                                <div class="d-flex align-items-start">
                                    <div class="me-2" style="font-size: 1.5rem;" title="@unit_description" data-bs-toggle="tooltip">@emoji</div>
                                    <div style="flex: 1;">
                                        <small class="text-muted d-block" title="@unit_description" data-bs-toggle="tooltip" style="cursor: help; border-bottom: 1px dotted #999;">@description</small>
                                        <strong class="d-block">
                                            @measurement.Value
                                            @if (!string.IsNullOrEmpty(measurement.Unit))
                                            {
                                                <span class="text-muted" title="@unit_description" data-bs-toggle="tooltip" style="cursor: help;">@measurement.Unit</span>
                                            }
                                        </strong>
                                        <small class="text-muted" style="font-size: 0.75rem;">@unit_description</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">‚è≥ No measurements available yet - sensor may be initializing</p>
                }
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">‚ÑπÔ∏è Sensor Information</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong title="Unique identifier for this sensor" data-bs-toggle="tooltip" style="cursor: help; border-bottom: 1px dotted #999;">üÜî Sensor ID</strong>
                        <p class="text-monospace text-muted">@Model.SensorId</p>
                        <small class="text-muted">Unique identifier assigned to this sensor</small>
                    </div>
                    <div class="col-md-6">
                        <strong title="Where this sensor data comes from" data-bs-toggle="tooltip" style="cursor: help; border-bottom: 1px dotted #999;">üì° Data Source</strong>
                        <p>
                            @{
                                var sourceEmoji = Model.SourceType.ToLower() switch
                                {
                                    "opensensemap" => "üó∫Ô∏è OpenSenseMap",
                                    "public-environment" => "üåç OpenSenseMap (Public)",
                                    "sensor-community" => "üë• Sensor.Community Network",
                                    "seed" => "üå± Synthetic/Test",
                                    "synthetic-lab" => "üß™ Laboratory Synthetic",
                                    _ => Model.SourceType
                                };
                            }
                            @sourceEmoji
                        </p>
                        <small class="text-muted">Source network or API providing this sensor's data</small>
                    </div>
                </div>
                @if (Model.Lat.HasValue && Model.Lon.HasValue)
                {
                    <div class="row">
                        <div class="col-md-6">
                            <strong title="North-South position on Earth" data-bs-toggle="tooltip" style="cursor: help; border-bottom: 1px dotted #999;">üìç Latitude</strong>
                            <p>@Model.Lat?.ToString("F6")</p>
                            <small class="text-muted">North-South position (-90¬∞S to +90¬∞N), decimal degrees</small>
                        </div>
                        <div class="col-md-6">
                            <strong title="East-West position on Earth" data-bs-toggle="tooltip" style="cursor: help; border-bottom: 1px dotted #999;">üìç Longitude</strong>
                            <p>@Model.Lon?.ToString("F6")</p>
                            <small class="text-muted">East-West position (-180¬∞W to +180¬∞E), decimal degrees</small>
                        </div>
                    </div>
                }
                <div class="row mt-3 pt-3 border-top">
                    <div class="col-md-6">
                        <strong title="When this sensor was first registered in our system" data-bs-toggle="tooltip" style="cursor: help; border-bottom: 1px dotted #999;">üìÖ Since</strong>
                        <p>@Model.CreatedAt.ToString("g")</p>
                        <small class="text-muted">Date/time sensor was first added</small>
                    </div>
                    <div class="col-md-6">
                        <strong title="Total number of measurements collected from this sensor" data-bs-toggle="tooltip" style="cursor: help; border-bottom: 1px dotted #999;">üìä Total Events</strong>
                        <p>@Model.TotalEventCount.ToString("N0")</p>
                        <small class="text-muted">Total number of data reports received</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">üìã Recent Data Reports (Last 50 Events)</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>‚è∞ Time Observed</th>
                            <th title="SUCCESS=Data valid | WARNING=Data questionable | ERROR=Collection failed" data-bs-toggle="tooltip" style="cursor: help; border-bottom: 1px dotted #999;">üìä Status</th>
                            <th title="Details about what happened during data collection" data-bs-toggle="tooltip" style="cursor: help; border-bottom: 1px dotted #999;">üìù Details</th>
                            <th title="Number of measurements in this report" data-bs-toggle="tooltip" style="cursor: help; border-bottom: 1px dotted #999;">üìà Measurements</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.RecentEvents.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">‚è≥ No events yet</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var evt in Model.RecentEvents.OrderByDescending(e => e.ObservedAt))
                            {
                                <tr>
                                    <td>
                                        <small>@evt.ObservedAt.ToString("g")</small>
                                    </td>
                                    <td>
                                        @{
                                            var (statusBadge, statusDescription) = evt.StatusLevel switch
                                            {
                                                "ERROR" => ("danger", "üî¥ Data collection FAILED - sensor may be offline or API unreachable"),
                                                "WARN" => ("warning", "üü° Data QUESTIONABLE - sensor returned partial/invalid data"),
                                                "INFO" => ("success", "üü¢ Data OK - successfully collected valid measurements"),
                                                _ => ("secondary", "‚ö™ UNKNOWN status")
                                            };
                                        }
                                        <span class="badge bg-@statusBadge" title="@statusDescription" data-bs-toggle="tooltip" style="cursor: help;">@evt.StatusLevel</span>
                                    </td>
                                    <td>
                                        <small>@(string.IsNullOrWhiteSpace(evt.StatusMessage) ? "‚Äî" : evt.StatusMessage)</small>
                                    </td>
                                    <td>
                                        @if (evt.Measurements.Any())
                                        {
                                            <small>
                                                @string.Join(", ", evt.Measurements.Take(2).Select(m => $"{m.Key}"))
                                                @if (evt.Measurements.Count > 2)
                                                {
                                                    <text>... (+@(evt.Measurements.Count - 2) more)</text>
                                                }
                                            </small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">None</small>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        @if (Model.Lat.HasValue && Model.Lon.HasValue)
        {
            <div class="card" style="height: 400px;">
                <div class="card-header bg-light">
                    <h6 class="mb-0">Location</h6>
                </div>
                <div id="detail-map" style="height: 350px;"></div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <small>üìç No location data available for this sensor</small>
            </div>
        }
    </div>
</div>

@section Scripts {
    @if (Model.Lat.HasValue && Model.Lon.HasValue)
    {
        <script>
            const map = L.map('detail-map').setView([@Model.Lat, @Model.Lon], 12);
            
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '¬© OpenStreetMap contributors',
                maxZoom: 19
            }).addTo(map);
            
            L.circleMarker([@Model.Lat, @Model.Lon], {
                radius: 10,
                fillColor: '#667eea',
                color: '#333',
                weight: 2,
                opacity: 1,
                fillOpacity: 0.8
            }).addTo(map).bindPopup('<strong>@Model.DisplayName</strong>');
        </script>
    }

    <script>
        // Initialize Bootstrap tooltips for all elements with data-bs-toggle="tooltip"
        document.addEventListener('DOMContentLoaded', function() {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(e => new bootstrap.Tooltip(e));
        });

        // Auto-refresh every 30 seconds to show latest data
        setTimeout(() => location.reload(), 30000);
    </script>
}
